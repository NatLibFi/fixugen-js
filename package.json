{
	"name": "@natlibfi/fixugen",
	"description": "Generate Node.js unit tests from fixtures and callbacks",
	"author": {
		"name": "The National Library of Finland"
	},
	"keywords": [],
	"homepage": "https://github.com/natlibfi/fixugen-js",
	"bugs": {
		"url": "https://github.com/natlibfi/fixugen-js/issues"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:natlibfi/fixugen-js.git"
	},
	"license": "MIT",
	"version": "2.0.15",
	"main": "./src/index.mjs",
	"type": "module",
	"engines": {
		"node": ">=22"
	},
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"lint": "eslint ./src",
		"lint:dev": "eslint --fix ./src",
		"test:base": "node --test --experimental-test-coverage --test-reporter=spec",
		"test": "npm run lint && npm run test:base",
		"watch:test": "cross-env DEBUG=@natlibfi/* NODE_ENV=test node --watch --test --experimental-test-coverage --test-reporter=spec",
		"dev": "npm run watch:test",
		"dev:debug": "cross-env LOG_LEVEL=debug DEBUG=@natlibfi/* NODE_ENV=test npm run watch:test"
	},
	"devDependencies": {
		"@natlibfi/fixura": "^4.0.0-alpha.2",
		"cross-env": "^7.0.3",
		"eslint": "^9.30.1"
	}
}